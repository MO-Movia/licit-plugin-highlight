{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "pretty": false,
    "esModuleInterop": true,
    "types": [
      "jest"
    ],
    "declaration": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "src"
  ]
}